<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0">


    <context-param>
        <param-name>org.scalatra.LifeCycle</param-name>
        <param-value>com.github.bennidi.scalatrest.boot.Application</param-value>
    </context-param>

    <!--
    This listener loads the class configured in param org.scalatra.LifeCycle
    That class should implement org.scalatra.LifeCycle.  Your app can be
    configured in Scala code there.
    -->
  <listener>
    <listener-class>org.scalatra.servlet.ScalatraListener</listener-class>
  </listener>
</web-app>
